<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include
            layout="@layout/toolbar"
    />

    <LinearLayout
            android:id="@+id/addPhotoLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:onClick="onClick"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_camera"
                android:id="@+id/cameraImage"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

        <TextView
                android:id="@+id/uploadPhotoText"
                android:text="Upload photo"
                android:gravity="center_horizontal"
                android:fontFamily="@font/karla_bold"
                android:textSize="15sp"
                android:lineHeight="22sp"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/cameraImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        <ImageView
                android:visibility="gone"
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="130dp"
        />

        <TextView
                android:visibility="gone"
                android:id="@+id/changePhotoText"
                android:text="Change photo"
                android:gravity="center_horizontal"
                android:fontFamily="@font/karla_bold"
                android:textSize="15sp"
                android:lineHeight="22sp"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/cameraImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>


    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Episode title"
            android:id="@+id/titleLayout"
            android:layout_marginTop="73dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/addPhotoLayout">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#a0a0a0"
                android:inputType="text"
                android:id="@+id/titleText"
                android:fontFamily="@font/karla"

        />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
            android:id="@+id/seasonEpisodeText"
            app:layout_constraintTop_toBottomOf="@+id/titleLayout"
            android:text="Season &amp; Episode"
            android:textSize="17sp"
            android:fontFamily="@font/karla"
            android:textColor="#a0a0a0"
            android:layout_marginTop="28dp"
            android:layout_marginStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/numberPickerText"
            app:layout_constraintTop_toBottomOf="@id/seasonEpisodeText"
            android:text="S 01, E 01"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick"
            android:layout_marginTop="2dp"
            android:layout_marginStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"/>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Episode description"
            android:id="@+id/descLayout"
            android:layout_marginTop="22dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/numberPickerText">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#a0a0a0"
                android:inputType="text"
                android:id="@+id/descText"
                android:fontFamily="@font/karla"

        />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
            android:text="SAVE"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/SaveButton"
            android:background="@drawable/button_rounded_selector"
            android:enabled="false"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:letterSpacing="0.32"
            android:lineSpacingExtra="4sp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/karla_bold"
            android:stateListAnimator="@null"/>


</androidx.constraintlayout.widget.ConstraintLayout>