<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            />

    <TextView
            android:id="@+id/showDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#505050"
            android:lineHeight="24sp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"

            android:text="@string/doctorWhoDesc"
            android:fontFamily="@font/karla"/>

    <TextView
            android:id="@+id/episodesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/showDesc"
            android:layout_marginStart="24dp"
            android:text="Episodes"
            android:fontFamily="@font/karla_bold"
            android:textColor="#2e2e2e"
            android:textSize="20sp"
            android:layout_marginTop="34dp"
            android:gravity="center_vertical"
    />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewEp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/episodesText"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_white"
            android:backgroundTint="@color/colorAccent"
            android:id="@+id/floatingActionButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="22dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/emptyView"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/episodesText"
            app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="33dp"
                app:srcCompat="@drawable/img_placeholder_episodes"
                android:id="@+id/sleeper"/>
        <TextView
                android:layout_marginTop="14dp"
                android:fontFamily="@font/karla"
                android:textColor="#505050"
                android:textSize="15sp"
                android:lineHeight="22sp"
                android:lineSpacingExtra="7sp"
                android:gravity="center_horizontal"
                android:text="Someone has fallen asleep.\nDon't wake him up."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/infoText"/>
        <TextView
                android:layout_marginTop="7sp"
                android:fontFamily="@font/karla_bold"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onAddEpisode"
                android:lineHeight="22sp"
                android:lineSpacingExtra="7sp"
                android:gravity="center_horizontal"
                android:text="Add some episodes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/clickableText"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>