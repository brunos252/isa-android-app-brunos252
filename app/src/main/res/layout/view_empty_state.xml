<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/emptyViewImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            app:srcCompat="@drawable/img_placeholder_episodes"/>

    <TextView
            android:id="@+id/emptyViewText"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/karla"
            android:textColor="#505050"
            android:textSize="15sp"
            android:lineHeight="22sp"
            android:lineSpacingExtra="7sp"
            android:gravity="center_horizontal"
            android:text="Someone has fallen asleep.\nDon't wake him up."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/addEpisodesText"
            android:layout_marginTop="7sp"
            android:fontFamily="@font/karla_bold"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:lineHeight="22sp"
            android:lineSpacingExtra="7sp"
            android:gravity="center_horizontal"
            android:text="Add some episodes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>