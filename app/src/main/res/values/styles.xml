<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#2e2e2e</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/karla_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:lineHeight">80sp</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/karla_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#de000000</item>
    </style>
    <style name="NumberPicker">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="mainButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_rounded_selector</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/karla_bold</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

</resources>
